<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradientcolor"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activitys.Main">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_height="match_parent">

    <com.github.florent37.shapeofview.shapes.ArcView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:elevation="4dp"
        app:shape_arc_cropDirection="outside"
        app:shape_arc_height="20dp"
        app:shape_arc_position="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/gradientcolor"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="30dp"
                    android:src="@drawable/logo"
                    android:layout_height="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="30dp"
                    android:textColor="#fff"
                    android:text="3 en raya"
                    android:fontFamily="@font/futura"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/tresrayas"
                android:layout_height="150dp"/>

        </LinearLayout>

        <!-- YOUR CONTENT -->
    </com.github.florent37.shapeofview.shapes.ArcView>

        <TextView
            android:layout_width="match_parent"
            android:padding="12dp"
            android:fontFamily="@font/futura"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="3 en raya es un videojuego en linea multijugador a nivel global"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:padding="12dp"
            android:fontFamily="@font/futura"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="#5a5a5a"
            android:text="Sube de nivel y obtenie grandes recompensas y sube de nivel"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="50dp"
                    android:src="@drawable/bronze"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Bronze"
                    android:fontFamily="@font/futura"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="50dp"
                    android:src="@drawable/silver"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Plata"
                    android:fontFamily="@font/futura"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="50dp"
                    android:src="@drawable/gold"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Oro"
                    android:fontFamily="@font/futura"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="50dp"
                    android:src="@drawable/master"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Master"
                    android:fontFamily="@font/futura"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
        android:gravity="bottom"
        android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="10dp"
        android:foreground="@drawable/shadow"
        android:clickable="true"
        android:id="@+id/btnLogin"
        android:background="#fff"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradientcolor"
            android:padding="16dp">
            <TextView
                android:layout_width="match_parent"
                android:text="Iniciar SesiÃ³n"
                android:textSize="16dp"
                android:textAlignment="center"
                android:fontFamily="@font/futura"
                android:textColor="#fff"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="15dp"
        android:foreground="@drawable/shadow"
        android:clickable="true"
        android:id="@+id/btnRegister"
        android:background="#fff"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradientcolor"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:text="Registrarse"
                android:textSize="16dp"
                android:textAlignment="center"
                android:fontFamily="@font/futura"
                android:textColor="#fff"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_facebook"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    </LinearLayout>
</LinearLayout>